<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <fieldset>
        <legend>
            로그인
        </legend>
        <form   id ="form_info">
            아아디<input type="text" name="id" value="">
            패스워드<input type="password" name="pw" value="">
            <button type="button" onclick="login()" > 로그인 </button>
        </form>
        
    </fieldset>

    <script>
        function login(){
            let form = document.getElementById("form_info")
            axios({
                method:"post",
                url:"/login_check",
                data: {
                    id:form.id.value,
                    pw:form.pw.value
                }
                

            }).then(function (res){
                console.log(res)
                if(res.data.user==form.id.value){
                    alert(res.data.user+"님 환영합니다.")
                    window.location.href= "/navbar"
                }
                else{
                    alert("로그인 실패")
                    form.reset() //form태그 안에 있는 value값이 reset
                
            }
            })
        }
    </script>
</body>
</html>